<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="io.sikorka.android">

  <uses-permission android:name="android.permission.INTERNET"/>
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
  <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

  <application
    android:name="io.sikorka.android.GethApplication"
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">
    <activity android:name="io.sikorka.android.MainActivity">
    </activity>

    <service
      android:name="io.sikorka.android.GethService"
      android:enabled="true"
      android:exported="false"/>

    <activity android:name="io.sikorka.android.ui.accounts.AccountActivity"/>
    <activity android:name="io.sikorka.android.ui.accounts.account_export.AccountExportActivity"/>
    <activity
      android:name="io.sikorka.android.ui.splash.SplashActivity"
      android:theme="@style/AppTheme.NoActionBar">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
      android:name="io.sikorka.android.ui.accounts.account_import.AccountImportActivity">
    </activity>
    <activity
      android:name="io.sikorka.android.ui.wizard.WizardActivity"
      android:theme="@style/AppTheme.NoActionBar"
      />
  </application>

</manifest>