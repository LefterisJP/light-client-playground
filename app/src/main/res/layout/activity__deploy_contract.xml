<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context="io.sikorka.android.ui.accounts.AccountActivity">

  <TextView
      android:id="@+id/deploy_contract__title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      android:fontFamily="@font/roboto_light"
      android:text="@string/deploy_contract__title"
      android:textSize="28sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>

  <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/deploy_contract__map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toTopOf="@+id/deploy_contract__guideline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/deploy_contract__title"/>

  <android.support.constraint.Guideline
      android:id="@+id/deploy_contract__guideline"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintGuide_percent="0.5"/>

  <android.support.design.widget.TextInputLayout
      android:id="@+id/deploy_contract__question"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginEnd="8dp"
      android:layout_marginStart="8dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/deploy_contract__guideline"
      app:passwordToggleEnabled="true">

    <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/deploy_contract__question"
        android:inputType="text"/>
  </android.support.design.widget.TextInputLayout>

  <android.support.design.widget.TextInputLayout
      android:id="@+id/deploy_contract__answer"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginEnd="8dp"
      android:layout_marginStart="8dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/deploy_contract__question"
      app:passwordToggleEnabled="true">

    <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/deploy_contract__answer"
        android:inputType="text"/>
  </android.support.design.widget.TextInputLayout>

  <android.support.design.widget.TextInputLayout
      android:id="@+id/deploy_contract__gas_price"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginEnd="8dp"
      android:layout_marginStart="8dp"
      app:layout_constraintEnd_toStartOf="@+id/deploy_contract__gas_price_currency"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/deploy_contract__answer"
      app:passwordToggleEnabled="true">

    <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/deploy_contract__gas_price"
        android:inputType="number"/>
  </android.support.design.widget.TextInputLayout>

  <TextView
      android:id="@+id/deploy_contract__gas_price_currency"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:layout_marginEnd="9dp"
      android:layout_marginTop="8dp"
      android:text="@string/deploy_contract__gas_price_currency"
      app:layout_constraintBottom_toBottomOf="@+id/deploy_contract__gas_price"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="@+id/deploy_contract__gas_price"
      app:layout_constraintVertical_bias="0.75"/>

  <android.support.design.widget.TextInputLayout
      android:id="@+id/deploy_contract__gas_limit"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginEnd="8dp"
      android:layout_marginStart="8dp"
      app:layout_constraintEnd_toStartOf="@+id/deploy_contract__gas_price_currency"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/deploy_contract__gas_price"
      app:passwordToggleEnabled="true">

    <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/deploy_contract__gas_limit"
        android:inputType="number"/>
  </android.support.design.widget.TextInputLayout>

  <TextView
      android:id="@+id/deploy_contract__gas_limit_currency"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:layout_marginEnd="9dp"
      android:layout_marginTop="8dp"
      android:text="@string/deploy_contract__gas_price_currency"
      app:layout_constraintBottom_toBottomOf="@+id/deploy_contract__gas_limit"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="@+id/deploy_contract__gas_limit"
      app:layout_constraintVertical_bias="0.75"/>

  <android.support.design.widget.FloatingActionButton
      android:tint="@color/white"
      android:id="@+id/deploy_contract__deploy_fab"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:layout_marginEnd="8dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:srcCompat="@drawable/ic_insert_drive_file_black_24dp"/>

</android.support.constraint.ConstraintLayout>
